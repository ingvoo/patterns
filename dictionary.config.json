{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transforms": ["color/hsl", "size/rem"],
      "transformGroup": "scss",
      "files": [{
        "destination": "assets/scss/00-tokens/tokens.scss",
        "format": "css/variables",
        "mapName": "tokens",
        "options": {
          "outputReferences": true
        }
      }]
    },
    "json": {
      "transformGroup": "web",
      "files": [{
        "destination": "public/tokens.json",
        "format": "json/nested",
        "mapName": "tokens"
      }]
    }
  }
}
