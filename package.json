{
  "name": "patterns",
  "version": "0.9.0",
  "description": "A styleguides starterkit",
  "keywords": [
    "scss",
    "styleguide"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ingvoo/patterns.git"
  },
  "author": "ingvoo",
  "license": "MIT",
  "homepage": "http://patterns.ljomi.ch",
  "scripts": {
    "start": "NODE_ENV=development concurrently 'node ./server.js' 'webpack-dev-server --hot'",
    "build": "NODE_ENV=production concurrently 'npm run build:fractal' 'npm run build:webpack'",
    "build:webpack": "NODE_ENV=production webpack",
    "build:fractal": "NODE_ENV=production fractal build",
    "release": "release-it",
    "lint": "npm run prettier && npm run stylelint && npm run eslint",
    "stylelint": "stylelint **/*.scss",
    "lint:format": "npm run prettier -- --write && npm run eslint:fix",
    "eslint": "eslint assets/scripts",
    "eslint:fix": "eslint --fix assets/scripts",
    "prettier": "prettier --check assets/scripts/**/*.js",
    "prettier:fix": "prettier --write assets/scripts/**/*.js",
    "validate": "npm run prettier && npm run eslint",
    "format": "npm run prettier:fix && npm run eslint:fix",
    "tokens": "style-dictionary build --config dictionary.config.json"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@frctl/fractal": "^1.3.0",
    "@frctl/nunjucks": "^2.0.2",
    "@release-it/conventional-changelog": "^1.1.4",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.2.0",
    "css-loader": "^3.5.3",
    "cssnano": "^4.1.10",
    "eslint": "^7.12.0",
    "eslint-config-prettier": "^6.14.0",
    "eslint-config-rawbot": "^1.1.1",
    "eslint-plugin-prettier": "^3.1.4",
    "file-loader": "^6.0.0",
    "marked": ">=2.0.0",
    "mini-css-extract-plugin": "^0.9.0",
    "postcss": "^8.2.13",
    "postcss-cli": "^7.1.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.3.2",
    "release-it": "^13.6.2",
    "sass": "^1.49.11",
    "sass-loader": "^8.0.2",
    "style-dictionary": "^3.0.1",
    "stylelint": "13.6.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "7.0.0",
    "stylelint-prettier": "^1.2.0",
    "svg-sprite-loader": "^5.0.0",
    "svgo": "^1.3.2",
    "svgo-loader": "^2.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
